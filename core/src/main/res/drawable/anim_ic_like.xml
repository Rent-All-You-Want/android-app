<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/liked"
        android:drawable="@drawable/anim_vd_trimclip_heart_full"
        android:state_checked="true" />

    <item
        android:id="@+id/not_liked"
        android:drawable="@drawable/anim_vd_trimclip_heart_empty"
        android:state_checked="false" />

    <transition
        android:drawable="@drawable/anim_avd_trimclip_heart_fill"
        android:fromId="@id/not_liked"
        android:toId="@id/liked" />

    <transition
        android:drawable="@drawable/anim_avd_trimclip_heart_break"
        android:fromId="@id/liked"
        android:toId="@id/not_liked" />

</animated-selector>