<resources>
    <!-- Base application theme. -->
    <style name="Theme.Rayw" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/portland_orange</item>
        <item name="colorPrimaryVariant">@color/hestia_red</item>
        <item name="colorOnPrimary">@color/whitest_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/warm_pink</item>
        <item name="colorSecondaryVariant">@color/radical_red</item>
        <item name="colorOnSecondary">@color/whitest_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_charcoal</item>

        <!-- Cards, sheets, and menus colors. -->
        <item name="android:colorBackground">@color/thamar_black</item>
        <item name="colorOnBackground">@color/whitest_white</item>

        <!-- Cards, sheets, and menus colors. -->
        <item name="colorSurface">@color/dark_charcoal</item>
        <item name="colorOnSurface">@color/whitest_white</item>

        <!-- Error colors. -->
        <item name="colorError">@color/coral_red</item>
        <item name="colorOnError">@color/white</item>
